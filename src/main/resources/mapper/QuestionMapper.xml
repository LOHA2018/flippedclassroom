<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.loha.flippedclassroom.mapper.QuestionMapper">
    <resultMap id="questionResultMap" type="Question">
        <id column="id" property="questionId"/>
        <result column="klass_seminar_id" property="klassSeminarId"/>
        <result column="attendance_id" property="attendanceId"/>
        <result column="team_id" property="teamId"/>
        <result column="student_id" property="studentId"/>
        <result column="is_selected" property="selected"/>
        <result column="score" property="score"/>
    </resultMap>
    <select id="selectQuestionById" resultMap="questionResultMap">
        select * from question where id=#{id}
    </select>

    <update id="updateQuestion" parameterType="Question">
        update question set is_selected=#{selected}, score=#{score}
    </update>

    <select id="selectQuestion" resultMap="questionResultMap">
        select * from question where team_id=#{teamId} and klass_seminar_id=#{klassSeminarId}
    </select>
</mapper>