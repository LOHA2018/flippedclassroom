<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.loha.flippedclassroom.mapper.TeamMapper">
    <resultMap id="teamMap" type="Team">
        <id column="id" property="id"/>
        <result column="klass_id" property="klassId"/>
        <result column="course_id" property="courseId"/>
        <result column="leader_id" property="leaderId"/>
        <result column="team_name" property="teamName"/>
        <result column="team_serial" property="teamSerial"/>
        <result column="status" property="status"/>

        <association property="klass" select="com.loha.flippedclassroom.mapper.KlassMapper.selectKlassById"
                     column="klass_id"/>
    </resultMap>
    <select id="selectTeamById" parameterType="Long" resultMap="teamMap">
        select *
        from team
        where id = #{value}
    </select>

    <select id="selectTeamByCourseId" parameterType="Long" resultMap="teamMap">
        select *
        from team
        where course_id = #{value}
    </select>

    <select id="selectTeamByKlassAndStudentId" parameterType="Map" resultMap="teamMap">
        select team.*
        from team,
             klass_student
        where klass_student.klass_id = #{klassId}
          and student_id = #{studentId}
          and team_id = id
    </select>

    <select id="selectTeamOfKlassByKlassId" resultMap="teamMap">
        select team.*
        from team
                 left outer join klass_team on team.id = klass_team.team_id
        where klass_team.klass_id = #{id}
    </select>

    <update id="updateTeam" parameterType="Team">
        update team
        set klass_id    = #{klassId},
            course_id   = #{courseId},
            leader_id   = #{leaderId},
            team_name   = #{teamName},
            team_serial = #{teamSerial},
            status      = #{status}
        where id = #{id}
    </update>
</mapper>